<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:layoutDirection="rtl"
    android:gravity="center"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/colorw"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtCartPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".13"
        android:text="50"
        android:textColor="@color/colorb"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:singleLine="true"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/thesansbold"/>

    <TextView
        android:id="@+id/txtCartQuantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".11"
        android:text="2"
        android:maxLines="1"
        android:textColor="@color/colorb"
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/thesansbold"/>

    <TextView
        android:id="@+id/txtCartSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".18"
        android:text="وسط"
        android:maxLines="1"
        android:textColor="@color/colorb"
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/thesansbold"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".55"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:gravity="center|start">

        <TextView
            android:id="@+id/txtCartName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="فرخة مشوية + رز + سلطة"
            android:textColor="@color/colorb"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/thesansbold"/>


    </LinearLayout>



    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/_7sdp"
        android:layout_weight=".03"
        android:src="@drawable/orange_point"
        android:tint="@color/colorOrange1"
        android:paddingEnd="@dimen/_3sdp"
        android:paddingStart="0dp"/>




</LinearLayout>