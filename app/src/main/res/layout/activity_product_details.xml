<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Scenarios.ScenarioSeven.Controller.Product_Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:scaleType="fitXY"
            android:src="@drawable/imgmain_" />

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/rostologo" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardMaxElevation="@dimen/_5sdp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/thesansbold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorb" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thesansbold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center">


                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/inc_dec_bg"
                    android:text="-"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/colorw"
                    android:textSize="@dimen/_17sdp"
                    android:fontFamily="@font/thesansbold"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/thesansbold"
                    android:text="1"
                    android:textColor="@color/colorb"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/inc_dec_bg"
                    android:text="+"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/colorw"
                    android:textSize="@dimen/_17sdp"
                    android:fontFamily="@font/thesansbold"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/thesansbold"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="meduim"
                        android:textSize="@dimen/_12sdp">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="الحجم"
                        android:fontFamily="@font/thesansbold"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="جنيه"
                    android:fontFamily="@font/thesansbold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/thesansbold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="السعر"
                    android:fontFamily="@font/thesansbold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_2sdp"/>

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:text="اضف الي الطلبات"
                android:textColor="@color/colorw"
                android:fontFamily="@font/thesansbold"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorOrange"
                android:layout_marginTop="@dimen/_10sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

