<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scenarios.ScenarioSeven.Controller.My_Cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_img" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardPreventCornerOverlap="true">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"></androidx.recyclerview.widget.RecyclerView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fontFamily="@font/thesansbold"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fontFamily="@font/thesansbold"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="السعر الاجمالي"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="اضافة طلب"
            android:textColor="@android:color/white"
            android:fontFamily="@font/thesansbold"
            android:textSize="@dimen/_11ssp"
            android:layout_gravity="center"
            android:background="@color/colorOrange"/>

        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="متابعة انهاء الطلب"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/thesansbold"
            android:textSize="@dimen/_11ssp"
            android:layout_gravity="center"
            android:background="@color/colorOrange"/>
    </LinearLayout>


</RelativeLayout>